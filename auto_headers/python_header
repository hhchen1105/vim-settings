import logging
import sys

import gflags

FLAGS = gflags.FLAGS
gflags.DEFINE_string('arg1', '', '')

logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)


def usage(cmd):
    logger.warn('Usage: %s --arg1="VAL"' % (cmd))
    return


def check_args(argv):
    try:
        argv = FLAGS(argv)
    except gflags.FlagsError:
        logger.warn(FLAGS)

    if FLAGS.arg1 == '':
        usage(argv[0])
        logger.warn('flag --arg1 cannot be empty')
        raise


def main(argv):
    check_args(argv)


if __name__ == "__main__":
    main(sys.argv)


import nose.tools as nt

class TestAll():
    def test_foo(self):
        nt.assert_equal(1, 1)
